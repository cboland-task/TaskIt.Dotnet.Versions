<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <!-- for tool publishing -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dotnet-versions</ToolCommandName>
    <PackageOutputPath>../nupkg</PackageOutputPath>
    <!-- -->
    <Version>1.1.2</Version>
    <Description>
      Simple Tool for setting / modifying version tags in *.sln or *.csproj files.
    </Description>
    <Company>Task Gmbh &amp; Co KG</Company>
    <Copyright>2019 Task GmbH &amp; Co KG</Copyright>
    <PackageTags>Task TaskIt dotnet tool cli version set modify increment</PackageTags>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.6.0" />
  </ItemGroup>

</Project>
